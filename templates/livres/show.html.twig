{% extends 'base.html.twig' %}

{% block title %}Détail du Livre - {{ livre.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <!-- Image du livre -->
            <div class="col-md-5">
                <div class="card p-3">
                    {% if livre.image %}
                        <img src="{{ livre.image }}" class="img-fluid" alt="Image de {{ livre.titre }}">
                    {% else %}
                        <img src="https://picsum.photos/300/400" class="img-fluid" alt="Image par défaut">
                    {% endif %}
                </div>

                <div class="mt-3">
                    <h5>Autres Variations</h5>
                    <div class="d-flex">
                        <img src="https://picsum.photos/50/50" class="me-2" alt="Variation 1">
                        <img src="https://picsum.photos/50/50" class="me-2" alt="Variation 2">
                        <img src="https://picsum.photos/50/50" alt="Variation 3">
                    </div>
                </div>
            </div>

            <!-- Détails du livre -->
            <div class="col-md-7">
                <h2>{{ livre.titre }}</h2>
                <p class="text-muted">Product Code: {{ livre.id }}</p>
                <h3 class="text-danger">$ {{ livre.prix }}</h3>
                <p><strong>Éditeur:</strong> {{ livre.editeur }}</p>
                <p><strong>Date d'édition:</strong> {{ livre.dateedition|date('d/m/Y') }}</p>

                <p>{{ livre.resume }}</p>

                <!-- Boutons -->
                <div class="mt-4">
                    <button class="btn btn-warning">Ajouter au panier</button>
                    <button class="btn btn-outline-secondary">Ajouter à la wishlist</button>
                </div>

                <!-- Infos supplémentaires -->
                <div class="mt-4">
                    <h5>Détails du livre</h5>
                    <table class="table">
                        <tr>
                            <td><strong>SKU</strong></td>
                            <td>{{ livre.id }}</td>
                        </tr>
                        <tr>
                            <td><strong>ISBN</strong></td>
                            <td>{{ livre.isbn }}</td>
                        </tr>
                        <tr>
                            <td><strong>Slug</strong></td>
                            <td>{{ livre.slug }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
